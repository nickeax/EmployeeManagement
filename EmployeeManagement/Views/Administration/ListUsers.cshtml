@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

@if (Model.Any())
{
    <a class="btn btn-primary" style="width:auto;" asp-action="Register" asp-controller="Account">
        Add new user...
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header" disabled>
                User Id: @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
            </div>
            <form method="post">
                <div>
                    <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-outline-primary">Edit</a>
                    <button type="submit" asp-action="DeleteUser" asp-all-route-id="@user.Id" class="btn btn-danger">Delete</button>
                </div>
            </form>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto;" asp-action="Register" asp-controller="Account">
                Add new user...
            </a>
        </div>
    </div>
}
