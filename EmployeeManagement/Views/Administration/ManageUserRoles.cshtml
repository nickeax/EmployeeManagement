@model List<ManageUserRolesViewModel>

@{
    ViewBag.Title = "Manage User Roles";
}

<h1>Manage User Roles</h1>

<form method="post" class="mt-3">
    <div class="card">
        <div class="card-header">
            <h2>Assign or remove roles for <strong>@ViewBag.userName</strong></h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsChecked" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model[i].IsChecked">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary auto-width" />
            <a asp-action="EditUser" asp-route-userId="@ViewBag.userId" class="btn btn-outline-primary auto-width">Cancel</a>
        </div>
    </div>
</form>